x = int(input('Ввести 4-значное число '))
if x > 999 and x < 10000:
    a = x // 1000
    b = x % 1000
    c = b // 100
    d = b % 100
    r = d // 10
    e = d % 10
    print(a, c, r, e)
    f = a + c
    w = r + e
    if f == w:
        print('Сумма равна')
    else:
        print('Сумма не равна')
        p = a + c + r + e
        if p % 3 == 0:
            print('Сумма кратна трем')
        else:
            print('Сумма не кратна трем')
            n = a * c * r * e
            if n % 4 == 0:
                print('Сумма кратна 4')
            else:
                print('Сумма не кратна 4')
                if n % a == 0:
                    print('Произведение кратно числу a')
                else:
                    print('Произведение не кратно числу a')
                    
