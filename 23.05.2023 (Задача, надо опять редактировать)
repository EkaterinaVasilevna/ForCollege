def yes_or_no():
    a = input("Хочешь разгадать загадку? Если ты готов, то мы начнем!")
    n = 0
    while n < 6:
        answer = input("Завязать можно, а развязать нельзя. Что это такое? \n")
        answer = answer.lower()
        if answer == "разговор":
            print("Молодец!", answer, " это правильный ответ")
            answer = input("Сколько яиц можно съесть натощяк? \n")
            if answer == "одно":
                print("Молодец!", answer, " это правильный ответ")
                answer = input("Что принадлежит вам, однако другие этим пульзуются чаще, чем вы сами?\n")
                if answer == "ваше имя":
                    print("Молодец!", answer, " это правильный ответ")
                else:
                    print("Ты не отгадал загадку. Попробуй еще, давай начнем занаво!")
                    n += 1
                    print("Ты использовал попыток из 5:", n)
                    if n == 5:
                        break
            else:
                print("Ты не отгадал загадку. Попробуй еще, давай начнем занаво! ")
                n += 1
                print("Ты использовал попыток из 5:", n)
                if n == 5:
                    break
        else:
            print("Ты не отгадал загадку. Попробуй еще, давай начнем занаво! ")
            n += 1
            print("Ты использовал попыток из 5:", n)
            if n == 5:
                break
                print("Ты использовал все попытки! Попробуй еще! ")
                break

yes_or_no()
            
