def yes_or_no():
    answer = input("Хочешь разгадать загадку? Если ты готов, то отвечай 'Да' и мы начнем!")
    n = 0
    while True:
        if answer == "Да":
            print("Ну что, начнем!")
            question = input("Завязать можно, а развязать нельзя. Что это такое?")
            if question == "Разговор":
                print(question, "Молодец! Это правильный ответ")
                question = input("Сколько яиц можно съесть натощяк?")
                if question == "Одно":
                    print(question, "Молодец! Это правильный ответ")
                    question = input("Что принадлежит вам, однако другие этим пульзуются чаще, чем вы сами?")
                    if question == "Ваше имя":
                        print(question, "Молодец! Это правильный ответ")
                    else:
                        print("Ты не отгадал загадку. Попробуй еще )")
                        n += 1 
                        print("Ты использовал попыток из 5:", n)
                        break
                else:
                    print("Ты не отгадал загадку. Попробуй еще )")
                    n += 1 
                    print("Ты использовал попыток из 5:", n)
                    break
            else:
                print("Ты не отгадал загадку. Попробуй еще )")
                n += 1 
                print("Ты использовал попыток из 5:", n)
                if n == 5:
                    break
                    print("Ты использовал все попытки")
        if answer == "Нет":
            print("Давай в другой раз!")
            break
              
yes_or_no()
yes_or_no()
yes_or_no()
yes_or_no()
